# Application
APP_ENV=production
APP_NAME=AI-Workflow-Agent
SECRET_KEY=your-production-secret-key-min-32-chars
LOG_LEVEL=INFO

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/workflow_agent
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Redis
REDIS_URL=redis://:password@localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.3

# Google APIs
GMAIL_CREDENTIALS_PATH=/app/config/gmail_credentials.json
GOOGLE_APPLICATION_CREDENTIALS=/app/config/google_service_account.json

# Notion
NOTION_API_KEY=secret_your_notion_key
NOTION_DATABASE_ID=your_database_id

# Security
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
API_KEY_HASH_ROUNDS=12

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Monitoring
PROMETHEUS_ENABLED=true
SENTRY_DSN=https://your-sentry-dsn
DATADOG_API_KEY=your-datadog-key

# Email Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@aiworkflow.com

# Celery
CELERY_BROKER_URL=redis://:password@localhost:6379/1
CELERY_RESULT_BACKEND=redis://:password@localhost:6379/2
CELERY_TASK_ALWAYS_EAGER=false
CELERY_TASK_EAGER_PROPAGATES=true

# WebSocket
WS_HEARTBEAT_INTERVAL=30
WS_CONNECTION_TIMEOUT=300

# Storage
UPLOAD_MAX_SIZE_MB=10
STORAGE_BACKEND=s3
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_S3_BUCKET=ai-workflow-uploads
AWS_REGION=us-east-1

# Feature Flags
ENABLE_ADVANCED_AI=true
ENABLE_WEBSOCKET=true
ENABLE_BATCH_PROCESSING=true
ENABLE_AUTO_SCALING=true

# External Services
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR-WEBHOOK
WEBHOOK_TIMEOUT_SECONDS=10
